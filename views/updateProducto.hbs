<nav class="navbar navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">
            <img src="/css/img/gigaphone_Logo.png" class="img-fluid" alt="">
        </a>
    </div>
</nav>
<div class="container-fluid bg-light mt-5">
    <div class="row justify-content-center aling-item-center">
        <div class="col-7 text-dark">
            <form method="POST" action="/admin/producto/update/{{single.id}}" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre<span class="text-danger">*</span></label>
                    <input type="text" value="{{single.nombre}}" class="form-control" id="nombre" name="nombre">
                </div>
                <div class="mb-3">
                    <label for="descripcion" class="form-label">Descripcion<span class="text-danger">*</span></label>
                    <input type="text" value="{{single.descripcion}}" class="form-control" id="descripcion" name="descripcion">
                </div>
                <div class="mb-3">
                    <label for="precio" class="form-label">Precio<span class="text-danger">*</span></label>
                    <input type="number" value="{{single.precio}}" class="form-control" id="precio" name="precio">
                </div>
                <div class="mb-3">
                    <label for="marca" class="form-label">Marca<span class="text-danger">*</span></label>
                    <input type="text" value="{{single.marca}}" class="form-control" id="marca" name="marca">
                </div>
                <div class="mb-3">
                    <label for="stock" class="form-label">Stock<span class="text-danger">*</span></label>
                    <input type="number" value="{{single.stock}}" class="form-control" id="stock" name="stock">
                </div>
                <div class="mb-3">
                    <label for="imagen" class="form-label">Agregar Imagen<span class="text-danger">*</span></label>
                    <input type="file" name="imagen" id="imagen">
                </div>
                <div class="mb-3">
                    <label for="telefono" class="form-label">Ingrese Categoria<span class="text-danger">*</span></label>
                    <select class="form-select" name="id_categoria">
                        <option value="{{single.id_categoria}}" selected>{{single.nombreCategoria}}</option>
                        {{#each categorias}}
                        <option value="{{id}}">{{categoria}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary mt-2">Actualizar producto</button>
                </div>
            </form>
        </div>
    </div>
</div>